<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.socialmedia.ui.controllers.LoginController"
      spacing="12" alignment="CENTER">

    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <Label text="Login" style="-fx-font-size: 22px; -fx-font-weight: bold;"/>

    <TextField fx:id="emailField" promptText="Email" maxWidth="260"/>
    <PasswordField fx:id="passwordField" promptText="Password" maxWidth="260"/>

    <Button text="Login" onAction="#onLogin" maxWidth="260"/>
    <Hyperlink text="Create account" onAction="#goToRegister"/>

    <Label fx:id="errorLabel" textFill="red"/>
</VBox>