<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.ImageView?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.socialmedia.ui.controllers.ProfileController"
            prefWidth="700" prefHeight="550"
            style="-fx-background-color: #f0f2f5;">

    <top>
        <HBox alignment="CENTER_LEFT" spacing="10" style="-fx-background-color: white; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 10, 0, 0, 5);">
            <padding>
                <Insets bottom="12" left="20" right="20" top="12" />
            </padding>
            <Label fx:id="lblTitle" style="-fx-font-size: 22px; -fx-font-weight: bold; -fx-text-fill: #1877f2;" text="Edit Profile" />
            <Pane HBox.hgrow="ALWAYS" />
            <Button onAction="#onBack" style="-fx-background-radius: 20; -fx-background-color: #e4e6eb;" text="Back" />
        </HBox>
    </top>

    <!-- Main Content Area -->
    <center>
        <ScrollPane fitToWidth="true" style="-fx-background-color: transparent; -fx-background: transparent; -fx-border-color: transparent;">
            <content>
                <VBox spacing="20" maxWidth="600" alignment="TOP_CENTER">
                    <padding>
                        <Insets top="5" bottom="5" left="5" right="5"/>
                    </padding>

                    <!-- Profile Edit Card -->
                    <VBox fx:id="profileCard" spacing="15" style="-fx-background-color: white; -fx-padding: 20; -fx-background-radius: 10; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.05), 5, 0, 0, 2);">
                        
                        <!-- Profile Content - Image Left, Info Right -->
                        <HBox spacing="20" alignment="TOP_LEFT">
                            
                            <!-- Profile Picture Section -->
                            <VBox alignment="TOP_LEFT" spacing="10">
                                <ImageView fx:id="imgProfile"
                                           fitWidth="120"
                                           fitHeight="120"
                                           preserveRatio="true" />
                                <!-- Change Image Button -->
                                <Button fx:id="btnChangeImage"
                                        text="Update Image"
                                        onAction="#onChangeImage"
                                        style="-fx-background-color: #1877f2; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 5;" />
                            </VBox>

                            <!-- Profile Info - Right Side -->
                            <VBox spacing="15" HBox.hgrow="ALWAYS">
                                
                                <!-- Name Field -->
                                <VBox spacing="5">
                                    <Label text="Name:" style="-fx-font-weight: bold; -fx-text-fill: #65676b; -fx-font-size: 12;" />
                                    <TextField fx:id="txtName" 
                                               promptText="Enter your name" 
                                               style="-fx-padding: 8; -fx-font-size: 14;" />
                                </VBox>


                                <!-- Bio Field -->
                                <VBox spacing="5">
                                    <Label text="Bio" style="-fx-font-weight: bold; -fx-text-fill: #65676b; -fx-font-size: 12;" />
                                    <TextArea fx:id="txtBio"
                                              promptText="Write something about yourself..."
                                              prefHeight="80"
                                              wrapText="true"
                                              style="-fx-padding: 8; -fx-font-size: 14; -fx-control-inner-background: #f0f2f5; -fx-background-color: #f0f2f5;" />
                                </VBox>

                                <!-- Password Field -->
                                <VBox spacing="5">
                                    <Label text="New Password" style="-fx-font-weight: bold; -fx-text-fill: #65676b; -fx-font-size: 12;" />
                                    <PasswordField fx:id="txtPassword" 
                                                  promptText="Leave blank to keep current password" 
                                                  style="-fx-padding: 8; -fx-font-size: 14;" />
                                </VBox>

                            </VBox>

                        </HBox>

                        <!-- Action Buttons -->
                        <HBox fx:id="buttonBox" alignment="CENTER_RIGHT" spacing="10">
                            <Button fx:id="btnSave"
                                    text="Save"
                                    onAction="#onSaveProfile"
                                    style="-fx-background-color: #31a24c; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 5;" />
                            <Button fx:id="btnCancel"
                                    text="Cancel"
                                    onAction="#onCancelEdit"
                                    style="-fx-background-color: #e4e6eb; -fx-font-weight: bold; -fx-background-radius: 5;" />
                        </HBox>

                    </VBox>
                </VBox>
            </content>
        </ScrollPane>
    </center>

</BorderPane>
